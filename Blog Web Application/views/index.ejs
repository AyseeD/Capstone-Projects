<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/myCSSMain.css">
    <title>Blog Site</title>
</head>
<body>
    <%- include("partials/header.ejs") %>

    <div class="container">
        <div id="carouselExampleCaptions" class="carousel slide">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true"></button>
              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"></button>
              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/images/959311.png" class="d-block w-100" alt="">
                <div class="carousel-caption d-none d-md-block">
                  <h5>Blog</h5>
                  <p>Write about whatever you think and feel.</p>
                </div>
              </div>
              <div class="carousel-item">
                <img src="/images/dsk.jpg" class="d-block w-100" alt="">
                <div class="carousel-caption d-none d-md-block">
                  <h5>Edit</h5>
                  <p>Change and delete your posts whenever you want.</p>
                </div>
              </div>
              <div class="carousel-item">
                <img src="/images/lapland_s_snowy_magic_a_winter_scene-wallpaper-3840x2160.jpg" class="d-block w-100" alt="">
                <div class="carousel-caption d-none d-md-block">
                  <h5>Need Help?</h5>
                  <p>Contact us and we will assist you.</p>
                </div>
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
        </div>
          
        <div class="container px-4">
            <div class="row gx-5">
                <div class="col-8">
                    <div class="p-3">
                        <h1>Blogs</h1>

                        <% posts.forEach(post => { %>
                            <div class="Post">
                                <div>
                                    <strong class="NameStyle"><em><%= post.Name %></em></strong>
                                </div>
                                <br>
                                <p><%= post.Text %></p>

                                <div class="dropdown">
                                    <a class="btn btn-primary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        Edit
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="/Update/<%= post.id %>">Update</a></li>
                                        <li><a class="dropdown-item" href="/Delete/<%= post.id %>">Delete</a></li>
                                    </ul>
                                </div>
                            </div>
                            <br>
                        <% }) %>

                    </div>
                </div>

                <div class="col-4">
                    <div class="py-3 px-5">
                        <div class="card text-center" style="width: 18rem;">
                            <img src="/images/High_resolution_wallpaper_background_ID_77701388919-optimized.webp" class="card-img-top" alt="Some img">
                            <div class="card-body">
                                <p class="card-text">This is some type of a link card for other blogs or ads.</p>
                            </div>
                        </div>

                        <div class="card text-center" style="width: 18rem; margin-top: 80px;">
                            <img src="/images/High_resolution_wallpaper_background_ID_77701388919-optimized.webp" class="card-img-top" alt="Some img">
                            <div class="card-body">
                                <p class="card-text">This is some type of a link card for other blogs or ads.</p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <%- include("partials/footer.ejs") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>